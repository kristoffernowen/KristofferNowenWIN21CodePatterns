@model Fixxo.MVC.ViewModels.HomeIndexViewModel

<div class="four-products-flex">
    <div class="grey-box-50 me-2">

    </div>
    <section class="featured-product ms-2">
        <div class="featured-grid featured-grid-4">

            @{
                if (Model != null)
                {
                    if (Model.Shoes.Count + Model.Jackets.Count < 5)
                    {
                        @foreach (var product in Model.Jackets)
                        {
                       
                            <partial name="ProductPartials/_JacketPartial" model="product"/>
                        }
                        @foreach (var product in Model.Shoes)
                        {
                       
                            <partial name="ProductPartials/_ShoesPartial" model="product"/>
                        }
                    }
                    @* else *@
                    @* { *@
                    @*     for (var i = 0; i < 4; i++) *@
                    @*     { *@
                    @*         <partial name="ProductPartials/_ProductPartial"  model="Model[i]"/> *@
                    @*     } *@
                    @* } *@
                }
            }

        </div>
    </section>
</div>