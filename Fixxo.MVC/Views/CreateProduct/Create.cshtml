@model Fixxo.MVC.Models.InputDto.CreateProductInputDto

<partial name="_NavbarPartial" />


<form asp-action="Create" class="col-4 offset-4">
    <div>
        <p>Choose product Category</p>
        
        <select asp-for="Category">
            <option value="Jacket">Jacket</option>
            <option value="Shoes">Shoes</option>
            <option value="Boots">Boots</option>
            <option value="High heels">High heels</option>
        </select>
    </div>
    <div>
        <p>Put product name</p>
        <input asp-for="Name" id="productName" placeholder="name" />
    </div>
    <div>
        <p>Put product rating 1-5</p>
        <input asp-for="Rating" id="rating" placeholder="rating" />
    </div>
    <div>
        <p>Put product price</p>
        <input asp-for="Price" id="price" type="number" placeholder="price" />
    </div>
    <div>
        <p>Put product price</p>
        <input asp-for="ImgUrl" id="imgUrl" type="text" placeholder="Image Url" />
        <p>Will have a default image if blank</p>
    </div>
    <div>
        <p>Some additional values are added hardcoded</p>
    </div>

    <div class="d-flex  flex-column">
        <button class="btn-info my-3" type="submit">Create</button>
    </div>
</form>

<script src="~/js/site.js" asp-append-version="true"></script>
